<main>
    <div class='container'>
    <% breadcrumb :post_relax_edit,  @post_relax %>
     <div class='row'>
      <div class=" col-lg-10 px-5 px-sm-0 pb-5 mx-auto">
       <h2 class="py-3">投稿編集</h2>
        <% if @post_relax.errors.any? %>
          <div id="error explanation">
            <h2><%= @post_relax.errors.count %> 件のエラーが発生しました</h2>
              <ul>
                <% @post_relax.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
              </ul>
          </div>
        <% end %>

        <%= form_with model:@post_relax, local:true do |f| %>

          <div class="form-group">
            <label for="post_image">画像</label>
            <%= f.attachment_field :image %>
          </div>
          <div class="form-group">
           <label for="post-caption">説明</label>
           <%= f.text_area :caption, class: "form-control" %>
          </div>
          <div class="form-group">
           <%= f.submit "更新", class:"btn btn-success",style:"opacity: 0.8;" %>
          </div>
        <% end %>

        <%= link_to "投稿詳細", post_relax_path(@post_relax.id) %>
        |
        <%= link_to "戻る", post_relaxes_path %>
      </div>
    </div>
</main>
