<main>
  <div class='container px-5 px-sm-0'>
    <div class='row'>
      <div class='col-lg-3 mb-5'>
        <h2 class="mt-3"><%= @user.name %></h2>
        <table class='table'>
          <tr>
            <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, fallback: "default-image.jpg", class:"rounded-circle" %> <!-- 固定値 -->
          </tr>
          <tr>
            <td>
              <%= link_to user_followings_path(@user.id),class:"text-dark" do %>
                フォロー: <%= @user.followings.count %>
              <% end %>

              <%= link_to user_followers_path(@user.id),class:"text-dark ml-5" do %>
                フォロワー: <%= @user.followers.count %>
              <% end %>
            </td>
          </tr>
          <tr>
            <td><%= @user.introduction %></td>  <!-- 固定値 -->
          </tr>
        </table>
        <div class='row'>
          <%= link_to edit_user_path(@user), class: "btn btn-outline-secondary btn-block" do %>
            <i class="fas fa-user-cog"></i> 編集
          <% end %>
        </div>
　　　　<div class='row'>
          <%= link_to new_post_relax_path(@post_relax), class: "btn btn-success btn-block",style:"opacity: 0.8;" do %>
            <i class="fas fa-plus"></i> 新規投稿
          <% end %>
        </div>
      </div>

      <div class='col-lg-8 offset-lg-1'>
         <h2 class="mt-3">みんなの投稿</h2>
         <%= render 'post_relaxes/list', post_relaxes: @post_relaxes %>
      </div>
    </div>
  </div>
</main>
