<main>
  <div class='container px-5 px-sm-0'>
    <% breadcrumb :post_relaxes %>
    <div class='row'>
      <div class='col-lg-3 mb-5'>
        <%= render 'users/profile', user: @user %>
　　　　<div class='row'>
          <%= link_to new_post_relax_path(@post_relax), class: "btn btn-success btn-block",style:"opacity: 0.8;" do %>
            <i class="fas fa-plus"></i> 新規投稿
          <% end %>
        </div>
      </div>

      <div class='col-lg-8 offset-lg-1'>
        <h2 class="mt-3">みんなの投稿</h2>
        <div class="dropdown my-3 text-right">
          <button class="btn btn-outline-secondary dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            並べ替え
          </button>
          <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
            <%= link_to '新しい順', post_relaxes_path(latest: "true"), class:"dropdown-item mb-0" %>
            <%= link_to '古い順', post_relaxes_path(old: "true"), class:"dropdown-item" %>
            <%= link_to 'いいねの多い順', post_relaxes_path(order_by_favorite_count: "true"), class:"dropdown-item" %>
            <%= link_to 'いいねの少ない順', post_relaxes_path(reverse_order_by_favorite_count: "true"), class:"dropdown-item" %>
          </div>
        </div>

         <%= render 'post_relaxes/list', post_relaxes: @post_relaxes %>
        <%= paginate @post_relaxes %>
      </div>
    </div>
  </div>
</main>
