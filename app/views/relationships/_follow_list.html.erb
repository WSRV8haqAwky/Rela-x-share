<% if @users.exists? %>
  <div class="card-list-container">
    <div class="row">
      <% @users.each do |user| %>
        <div class="col-lg-6 col-md-8 col-sm-10 mb-5">
          <div class="card mx-auto shadow-lg h-100">
            <div class="card-body">
              <div class="row">
                <div class="col-3">
                  <%= link_to user_path(user.id) do %>
                    <%= attachment_image_tag user, :profile_image, :fill, 60, 60, fallback: "default-image.jpg", size: '60x60', class:"mt-3 rounded-circle"; %>
                  <% end %>
                </div>
                <div class="col-9">
                  <span><i class="fas fa-user"></i> <b><%= link_to user.name, user_path(user.id),class:"text-dark" %></b></span>
                  <p class="card-text"><%= user.introduction %></p>
                </div>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>

<% else %>
  <p>ユーザーはいません</p>
<% end %>
